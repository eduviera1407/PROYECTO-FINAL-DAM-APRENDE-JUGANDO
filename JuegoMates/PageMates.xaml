                       Foreground="#FFF4CA44" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Button>

        <Button Canvas.Left="468" Canvas.Top="234" Tag="3" Click="Btn_Click_Number"
                MouseEnter="BtnHover"
                Style="{StaticResource AnimatedNumberButton}">
            <TextBlock Text="3" FontFamily="/Assets/#LazyDog" FontSize="150"
                       Foreground="#FFF4CA44" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Button>

