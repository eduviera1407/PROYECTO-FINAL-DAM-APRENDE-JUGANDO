<Page x:Class="AprendeJugando.PageMates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AprendeJugando"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Height="1080" Width="1920"
      Title="PageMates">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/Estilos.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Canvas x:Name="fondo">
        <Canvas.Background>
            <ImageBrush ImageSource="/Images/Imagenes/fondoSinArboles.jpg" />
        </Canvas.Background>
        <Button Style="{StaticResource BotonVolverEstilo}"
                ToolTip="Volver a la pantalla principal"
                Click="BtnVolver_Click"
                MouseEnter="BtnHover"
                Canvas.Left="33"
                Canvas.Top="13"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />


        <TextBlock x:Name="textoNivel" Canvas.Left="460" Canvas.Top="65" Height="80" Width="1000"
                   HorizontalAlignment="Left" Text="REPASEMOS LOS NUMEROS" TextAlignment="Center" FontSize="80"
                   FontFamily="/Assets/#Lazydog" Foreground="#FFF4CA44" TextWrapping="Wrap" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="5" BlurRadius="0" Opacity="1" />
            </TextBlock.Effect>
        </TextBlock>

        <Button Canvas.Left="134" Canvas.Top="234" Tag="1" Click="Btn_Click_Number"
                MouseEnter="BtnHover"
                Style="{StaticResource AnimatedNumberButton}">
            <TextBlock Text="1" FontFamily="/Assets/#LazyDog" FontSize="150"
                       Foreground="#FFF4CA44" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Button>

        <Button Canvas.Left="301" Canvas.Top="234" Tag="2" Click="Btn_Click_Number"
                MouseEnter="BtnHover"
                Style="{StaticResource AnimatedNumberButton}">
