                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Button>

        <Button Canvas.Left="802" Canvas.Top="234" Tag="5" Click="Btn_Click_Number"
