                </TextBlock.Effect>
            </TextBlock>
        </Button>

        <Button Canvas.Left="1637" Canvas.Top="234" Tag="10" Click="Btn_Click_Number"
                MouseEnter="BtnHover"
                Style="{StaticResource AnimatedNumberButton}">
            <TextBlock Text="10" FontFamily="/Assets/#LazyDog" FontSize="150"
                       Foreground="#FFF4CA44" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Button>

        <Image x:Name="cambioNumero" Height="553" Canvas.Left="960" Canvas.Top="517" Width="641"
               Source="/Images/Imagenes/JuegoMates/numeroUno.png" HorizontalAlignment="Left" VerticalAlignment="Center"
               Visibility="Collapsed" />
        <Image x:Name="personaje" Height="553" Canvas.Left="555" Canvas.Top="517" Width="291"
               Source="/Images/Imagenes/Personaje/duda.png" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Width="128" Height="159"
                Canvas.Left="1743" Canvas.Top="495"
                Click="pasarNivel"
                Style="{StaticResource BotonDecoradoBase}"
                RenderTransformOrigin="0.5,0.5"
                MouseEnter="BtnHover"
                HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-7.249" />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>

            <Grid>
                <Image Source="/Images/Imagenes/botonVacio.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5"
                       Margin="-3,-11,3,11">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="11.615" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <materialDesign:PackIcon Kind="ChevronRight"
                                         Width="50" Height="50"
                                         Foreground="Black" RenderTransformOrigin="-0.349,0.995" Margin="36,43,0,0">
                    <materialDesign:PackIcon.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="12.553" />
                            <TranslateTransform X="-4.365" Y="-9.817" />
                        </TransformGroup>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
            </Grid>
        </Button>

        <Button Style="{StaticResource BotonAyudaEstilo}"
                ToolTip="¿Cómo se juega?"
                Click="BtnComoseJuega_Click"
                Canvas.Left="1653" Canvas.Top="19"
                MouseEnter="BtnHover"
                HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="6.262" />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Canvas>
</Page>